<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@color/overlayBackground"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/musiclibrary_search"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/musiclibrary_search_info"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?android:selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/search"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/colorAccent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                    <EditText
                        android:id="@+id/musiclibrary_search_query"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionDone"
                        android:hint="@string/musiclibrary_search_hint"
                        android:inputType="text|textFilter"
                        android:autofillHints=""
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="2dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/musiclibrary_browse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/musiclibrary_browse_query"
                        android:background="?android:selectableItemBackground"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="@string/musiclibrary_query"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_filter_tilt_shift_black_24dp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/musiclibrary_query"
                            app:tint="@color/icon_active" />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp" />
                    <LinearLayout
                        android:id="@+id/musiclibrary_browse_save"
                        android:background="?android:selectableItemBackground"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorText"
                            android:text="@string/musiclibrary_query_save"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_save_black_24dp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/musiclibrary_query_save"
                            app:tint="@color/colorText" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/musiclibrary_query_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/musiclibrary_browse_header"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/musiclibrary_browse_header_show"
                    android:background="?android:selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_weight="@dimen/musiclibrary_column_weight_show"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/musiclibrary_column_mstart_show"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingEnd="0dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/text_active_on_accent"/>
                <se.splushii.dancingbunnies.ui.BrowseSortView
                    android:id="@+id/musiclibrary_browse_sort"
                    android:layout_width="0dp"
                    android:layout_weight="@dimen/browse_sort_weight"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"/>
                <TextView
                    android:id="@+id/musiclibrary_browse_header_num"
                    android:layout_width="@dimen/musiclibrary_column_width_num"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:layout_marginStart="@dimen/musiclibrary_column_mstart_num"
                    android:layout_marginEnd="@dimen/musiclibrary_column_mend_num"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/text_secondary_active"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/entries"/>
                <View
                    android:id="@+id/musiclibrary_browse_header_fastscroller_padding"
                    android:layout_width="@dimen/fastscroller_width"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/musiclibrary_browse_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/musiclibrary_browse_recyclerview"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="80dp"
                    android:clipToPadding="false"/>
                <se.splushii.dancingbunnies.ui.FastScroller
                    android:id="@+id/musiclibrary_browse_fastscroller"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/windowBackgroundLight"
                    android:layout_gravity="end" />
            </LinearLayout>
            <se.splushii.dancingbunnies.ui.FastScrollerBubble
                android:id="@+id/musiclibrary_browse_fastscroller_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_gravity="end" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <LinearLayout
            android:id="@+id/musiclibrary_search_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/musiclibrary_search_recyclerview"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="80dp"
                android:clipToPadding="false"/>
            <se.splushii.dancingbunnies.ui.FastScroller
                android:id="@+id/musiclibrary_search_fastscroller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/windowBackgroundLight"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/musiclibrary_search_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_search_white_24dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>